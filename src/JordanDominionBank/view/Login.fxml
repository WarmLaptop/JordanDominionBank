<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<BorderPane fx:controller="JordanDominionBank.view.Controller" xmlns:fx="http://javafx.com/fxml">
    <center>
        <GridPane alignment="center" vgap="10" hgap="10">
            <Label text="username: " GridPane.columnIndex="0" GridPane.rowIndex="0"></Label>
            <TextField onKeyReleased="#checkFields"  fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="0"></TextField>
            <Label text="password: " GridPane.columnIndex="0" GridPane.rowIndex="1"></Label>
            <PasswordField onKeyReleased="#checkFields" fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="1"></PasswordField>
            <Button fx:id="login" onMouseClicked="#login" GridPane.halignment="RIGHT" text="login" GridPane.columnIndex="1" GridPane.rowIndex="2"></Button>
            <Label fx:id="error"  textFill="red" GridPane.columnIndex="1" GridPane.rowIndex="3"></Label>

        </GridPane>
    </center>

</BorderPane>
